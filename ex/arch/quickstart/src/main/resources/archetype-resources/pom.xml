<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.incode</groupId>
        <artifactId>incode-parent</artifactId>
        <version>1.15.0.1</version>
    </parent>

    <groupId>${groupId}</groupId>
    <artifactId>${artifactId}</artifactId>
    <version>${version}</version>

    <name>Incode QuickStart</name>
    <description>Domain application leveraging the Incode Platform.</description>

    <properties>

        <isis.version>1.15.0</isis.version>
        <incode-platform.version>${project.parent.version}</incode-platform.version>

        <spring.version>4.1.9.RELEASE</spring.version>
        <jetty.version>9.4.3.v20170317</jetty.version>
        <activemq-web.version>5.14.3</activemq-web.version>
        <camel.version>2.16.3</camel.version>

        <!-- override properties inherited from incode-parent -->
        <activemq.version>${activemq-web.version}</activemq.version>
        <ognl.version>3.0.9</ognl.version>

        <xbean-spring.version>4.3</xbean-spring.version>
        <jackson.version>1.9.12</jackson.version>

        <snakeyaml.version>1.13</snakeyaml.version>

        <jaxb-impl.version>2.2.11</jaxb-impl.version>
        <jquery-selectors.version>0.2.4</jquery-selectors.version>
    </properties>

    <packaging>pom</packaging>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>${rootArtifactId}-appdefn</artifactId>
                <version>${version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>${rootArtifactId}-module-base</artifactId>
                <version>${version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>${rootArtifactId}-module-simple</artifactId>
                <version>${version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>${rootArtifactId}-module-simple</artifactId>
                <scope>test</scope>
                <type>test-jar</type>
                <version>${version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>${rootArtifactId}-webapp</artifactId>
                <version>${version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>${rootArtifactId}-example-appdefn</artifactId>
                <version>${version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>${rootArtifactId}-example-canonical</artifactId>
                <version>${version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>${rootArtifactId}-example-dom</artifactId>
                <version>${version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>${rootArtifactId}-example-embeddedcamel</artifactId>
                <version>${version}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <profiles>

        <profile>
            <id>enhance</id>
            <activation>
                <property>
                    <name>enhance</name>
                </property>
            </activation>
            <modules>
                <!-- Comment in to include example modules demonstrating platform usage: START --> <!--
                <module>example/dom</module>
                --> <!-- Comment in to include example modules demonstrating platform usage: END -->
                <module>module-simple</module>
            </modules>
        </profile>

        <profile>
            <id>default-modules</id>
            <activation>
                <property>
                    <name>!skip.default</name>
                </property>
            </activation>
            <modules>
                <module>module-base</module>
                <module>module-simple</module>
                <module>appdefn</module>
                <module>webapp</module>

                <!-- Comment in to include example modules that set up embedded camel: START --> <!--
                <module>example/canonical</module>
                <module>example/embeddedcamel</module>
                --> <!-- Comment in to include example modules that set up embedded camel: END -->

                <!-- Comment in to include example modules demonstrating platform usage: START --> <!--
                <module>example/dom</module>
                <module>example/appdefn</module>
                --> <!-- Comment in to include example modules demonstrating platform usage: END -->

            </modules>
        </profile>
    </profiles>
</project>
