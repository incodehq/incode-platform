{
    "Version":"2012-10-17",
    "Statement": [
        {
            "Effect":"Allow",
            "Principal":{
                "AWS":["*"]
            },
            "Action":[
                "s3:GetBucketLocation"
            ],
            "Resource":[
                "arn:aws:s3:::${BUCKET_NAME}"
            ]
        },
        {
            "Effect":"Allow",
            "Principal":{
                "AWS":["*"]
            },
            "Action":[
                "s3:ListBucket"
            ],
            "Resource":[
                "arn:aws:s3:::${BUCKET_NAME}"
            ],
            "Condition":{
                "StringEquals":{
                    "s3:prefix":[
                        "${PREFIX}"
                    ]
                }
            }
        },
        {
            "Effect":"Allow",
            "Principal":{
                "AWS":["*"]
            },
            "Action":[
                "s3:GetObject"
            ],
            "Resource":[
                "arn:aws:s3:::${BUCKET_NAME}/${PREFIX}*"
            ]
        }
    ]
}