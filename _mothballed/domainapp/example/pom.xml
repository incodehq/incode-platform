<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.incode</groupId>
        <artifactId>incode-domainapp</artifactId>
        <version>1.15.0-SNAPSHOT</version>
    </parent>

    <artifactId>incode-domainapp-example</artifactId>
    <name>Incode Platform DomainApp Example (parent)</name>
    <description>Example modules demonstrating use of the Incode Platform.</description>

    <packaging>pom</packaging>

    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>org.incode</groupId>
                <artifactId>incode-domainapp-example-publishmq-externalsystemadapter</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>incode-domainapp-example-canonical</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>incode-domainapp-example-appdefn</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>incode-domainapp-example-dom</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>incode-domainapp-example-embeddedcamel</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>org.incode</groupId>
                <artifactId>incode-domainapp-example-publishmq-embeddedcamel_to_externalsystem</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-web</artifactId>
                <version>${spring.version}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <modules>
        <module>canonical</module>
        <module>app</module>
        <module>dom</module>
        <module>embeddedcamel</module>
        <module>embeddedcamel_to_externalsystem</module>
        <module>externalsystemadapter</module>
    </modules>

</project>
