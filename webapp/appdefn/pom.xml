    <profiles>
        <profile>
            <id>flatten</id>
            <activation>
                <property>
                    <name>revision</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>flatten-maven-plugin</artifactId>
                        <version>1.0.0</version>
                        <executions>
                            <execution>
                                <id>flatten</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>flatten</goal>
                                </goals>
                                <configuration>
                                    <flattenMode>defaults</flattenMode>
                                    <updatePomFile>true</updatePomFile>
                                    <pomElements>
                                        <name>resolve</name>
                                        <description>resolve</description>
                                        <dependencies>resolve</dependencies>
                                    </pomElements>
                                </configuration>
                            </execution>
                            <execution>
                                <id>flatten.clean</id>
                                <phase>clean</phase>
                                <goals>
